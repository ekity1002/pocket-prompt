{
  "name": "pocket-prompt",
  "version": "1.0.0",
  "description": "Chrome extension for seamless prompt management and sharing",
  "type": "module",
  "scripts": {
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch --mode development",
    "dev": "npm run build:dev && npm run dev:watch",
    "dev:watch": "vite build --watch --mode development",
    "dev:server": "vite --mode development",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "chrome-extension",
    "prompt-management",
    "ai-tools",
    "productivity"
  ],
  "author": "ekity1002",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@testing-library/dom": "^10.4.1",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.15",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "volta": {
    "node": "20.19.4"
  }
}
